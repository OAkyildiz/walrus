<launch>
  <arg name="type" />
  <!-- Load controller configurations -->
  <rosparam file="$(find walrus_control)/config/walrus_control.yaml" command="load" />
  <rosparam file="$(find walrus_control)/config/walrus_control_$(arg type).yaml" command="load" />
  <rosparam file="$(find walrus_control)/config/walrus_control.yaml" command="load" />

  <!-- Spawn controllers in Robot HW -->
  <node ns="base" name="walrus_base_controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	args="--shutdown-timeout=2.0 joint_state_controller left_pods_joint_controller right_pods_joint_controller boom_deploy_controller boom_pan_controller boom_tilt_controller" />

  <node ns="base_epos" name="walrus_base_epos_controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	args="--shutdown-timeout=2.0 joint_state_controller drive_controller" />

  <!-- Robot state publisher to publish tf from joint states -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true"/>
</launch>
