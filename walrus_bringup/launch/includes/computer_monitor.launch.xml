<!-- Launch Nodes to monitor a computer -->
<launch>
  <arg name="name" default="computer" />

  <!-- Monitors internal computer sensors (fan, temperature, etc) -->
  <node pkg="libsensors_monitor" type="libsensors_monitor" name="$(arg name)_sensors_monitor" />
  <!-- Monitors computer resources -->
  <node pkg="walrus_diagnostics" type="host_resource_monitor.py" name="$(arg name)_resource_monitor" />
</launch>
